@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<main class="d-flex w-100">
    <div class="container d-flex flex-column">
        <div class="row vh-100">
            <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
                <div class="d-table-cell align-middle">

                    <div class="text-center mt-4">
                        <h1 class="h2">Log Out</h1>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <div class="m-sm-4 text-center">
                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                        <button type="submit" class="btn btn-primary">Click here to Logout</button>
                                    </form>
                                }
                                else
                                {
                                    <p>You have successfully logged out of the application.</p>
                                }
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</main>


